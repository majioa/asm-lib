CLEAR_LINE	PROC	NEAR
	PUSH	AX
	PUSH	CX
	PUSH	DX
	PUSH	SI
	PUSH	DI
	PUSH	DS
	PUSH	ES
	MOV	AX,0B800H
	MOV	ES,AX
	MOV	DS,AX
	MOV	AX,80
	MUL	CS:[CLEAR_LINE_Y_]
	ADD	AX,CS:[CLEAR_LINE_X_]
	ROL	AX,1
	MOV	DI,AX
	MOV	SI,DI
	MOV	CX,CS:[CLEAR_LINE_LEN_]
CLEAR_LINE_1:
	LODSW
	MOV	AL,32
	STOSW
	LOOP	CLEAR_LINE_1
	POP	ES
	POP	DS
	POP	DI
	POP	SI
	POP	DX
	POP	CX
	POP	AX
	RET
CLEAR_LINE_X_	DW	0
CLEAR_LINE_Y_	DW	0
CLEAR_LINE_LEN_	DW	0
CLEAR_LINE	ENDP
