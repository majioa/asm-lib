PAUSE	PROC	NEAR
	PUSH	AX
	PUSH	CX
	PUSH	DX
	MOV	AH,2CH
	INT	21H
	JMP	PAUSE_3
;	ADD	DL,50
	CMP	DL,100
	JB	PAUSE_1
	SUB	DL,100
PAUSE_3:
	INC	DH
	CMP	DH,60
	JB	PAUSE_1
	XOR	DH,DH
PAUSE_1:
	MOV	CS:[OLD_TIME_],DX
PAUSE_2:	
	MOV	AH,2CH
	INT	21H
	MOV	CX,CS:[OLD_TIME_]
	CMP	CH,DH
	JB	PAUSE_EXIT
	JA	PAUSE_2
	CMP	CL,DL
	JA	PAUSE_2
PAUSE_EXIT:
	POP	DX
	POP	CX
	POP	AX
	RET
OLD_TIME_	DW	0
ENDP
	